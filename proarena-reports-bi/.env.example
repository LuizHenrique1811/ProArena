# Ambiente
NODE_ENV=development

# Porta do serviço
PORT=3001

# PostgreSQL / Supabase
# IMPORTANTE: Use a porta 6543 (Connection Pooler) para compatibilidade IPv4
# Obtenha esta URL em: Supabase Dashboard -> Settings -> Database -> Connection Pooling
DATABASE_URL=postgresql://postgres.xxxxxxxxxxxx:senha@aws-0-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require

# Redis (Cache)
# Desenvolvimento local: redis://localhost:6379
# Produção: redis://usuario:senha@host:porta
REDIS_URL=redis://localhost:6379

# RabbitMQ / Kafka (Mensageria)
# Para consumo de eventos assíncronos
RABBITMQ_URL=amqp://localhost:5672

# API Gateway (para comunicação com outros serviços)
API_GATEWAY_URL=http://localhost:3000

# Observabilidade
# Sentry para tracking de erros
SENTRY_DSN=

# JWT Secret (para validação de tokens de autenticação)
JWT_SECRET=your-secret-key-change-in-production

# Logs
# Nível de log: error, warn, info, debug
LOG_LEVEL=info

# Configurações de Cache
# TTL padrão em segundos (300 = 5 minutos)
CACHE_TTL=300

# Configurações de Performance
# Tempo máximo de query em ms (para alertas)
QUERY_TIMEOUT=5000

# Agendamento de tarefas
# Habilitar cron job para verificação de qualidade
ENABLE_QUALITY_CRON=true
# Horário da verificação diária (formato cron)
QUALITY_CRON_SCHEDULE=0 3 * * *
